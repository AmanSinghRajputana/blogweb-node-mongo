<%- include("partials/header") -%>
<h1>Home</h1>
<p><%= firstContent %></p>

<%posts.forEach(function(post){ %>
  <form action="/delete" method="post">
  <h1><%=post.title %></h1> 
  <p><%= (post.content).slice(0,100) + "..." %>
   <a href="/posts/<%= post._id%>">Read More <button class="delete-button" type="submit" name="id"
    value="<%=post._id%>">❌</button></a>
</p>

</form>

 <%}); %>
<%- include("partials/footer") -%>